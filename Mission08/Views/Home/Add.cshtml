@model Mission08.Models.Task



<h2 class="text-center">@ViewData["Title"]</h2>


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    
                    <form asp-action="@(Model?.TaskId == 0 ? "Add" : "Edit")" method="post">
                        <input type="hidden" asp-for="TaskId">
                        <div class="row">
                            <!-- Task Name -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="TaskName" class="form-label">Task</label>
                                <input asp-for="TaskName" class="form-control" required/>
                                <span asp-validation-for="TaskName" class="text-danger"></span>
                            </div>

                            <!-- Due Date -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date</label>
                                <input asp-for="DueDate" type="date" class="form-control"/>
                            </div>

                            <!-- Quadrant Selection -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuadrantId" class="form-label">Quadrant</label>
                                <select asp-for="QuadrantId" class="form-select" required>
                                    <option value="1">Important / Urgent</option>
                                    <option value="2">Important / Not Urgent</option>
                                    <option value="3">Not Important / Urgent</option>
                                    <option value="4">Not Important / Not Urgent</option>
                                </select>
                            </div>

                            <!-- Category Selection -->
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Category:</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
                                    <option value="">Select a Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>



                            <div class="col-md-6 mb-3">
                                <label asp-for="Completed" class="form-label">Completed</label>
                                <select asp-for="Completed" class="form-select">
                                    <option value="true" @(Model.Completed == true ? "selected" : "")>Yes</option>
                                    <option value="false" @(Model.Completed == false ? "selected" : "")>No</option>
                                    <option value="" @(Model.Completed == null ? "selected" : "")>Not Set</option>
                                </select>
                            </div>






                        </div>

                        <!-- Form Buttons -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save Task</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
