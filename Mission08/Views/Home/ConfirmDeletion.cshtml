@model Task

<h3>Confirm Deletion</h3>

<h5>Are you sure you want to delete the task "<span style="font-weight: bold">@Model.TaskName</span>" from your task list?</h5>
<form method="post">
    <input for="TaskId" type="hidden"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    <button asp-controller="Home" asp-action="Quadrants" class="btn btn-info">Cancel</button>
</form>